
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="cresmont, cine, reservas, entradas, online, cartelera, peliculas, estrenos, pochoclos" />

    <title>@ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/sticky-footer-navbar.css")" rel="stylesheet" />
</head>

<body>
    <!-- navbar -->
    <nav class="navbar navbar-light bg-faded rounded navbar-toggleable-md">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
            <a class="navbar-brand" href="../../Home/Inicio">
                <img src="~/Content/images/logo-cresmont.png" width="150" />
            </a>
            <div class="collapse navbar-collapse nav-pills" id="navbarCollapse">
                
                    @if (Session["user"] != null)
                    {
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Peliculas", "Peliculas", new { @Controller = "Administracion" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Sedes", "Sedes", new { @Controller = "Administracion" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Carteleras", "Carteleras", new { @Controller = "Administracion" }, new { @class = "nav-link" })
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Reportes", "Reportes", new { @Controller = "Administracion" }, new { @class = "nav-link" })
                            </li>
                        </ul>
                        <p class="navbar-text">Bienvenido @Session["user"]</p>
                        @Html.ActionLink("Salir", "Logout", new { @Controller = "Home" }, new { @class = "nav-link text-right" })
                    }
                    else
                    {
                        <span class="navbar-nav">
                            @Html.ActionLink("Administración", "Login", new { @Controller = "Home" }, new { @class = "nav-link nav-text text-center" })
                        </span>
                    }
            </div>
        </div>
    </nav>

    <!-- Body Dinamico -->

    @RenderBody()
    
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <span class="text-muted">&copy; 2017 Cresmont. TP FINAL Programación Web 3 - Desarrollo Web - UNLaM </span>
        </div>
    </footer>

    <script src="@Url.Content("~/Content/js/jquery.min.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/js/reserva.js")"></script>
</body>
</html>