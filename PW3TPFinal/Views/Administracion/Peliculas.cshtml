@{
    ViewBag.Title = "Peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Gestion de Peliculas</h3>
    <br />
    <!-- Agregar nueva pelicula -->
    <div class="col-md-3">
        <a class="btn btn-lg btn-primary btn-block" href="./NuevaPelicula">Nueva Pelicula</a>
    </div>
    <br />
    <div class="col-md-12">
        <!-- Lista de peliculas -->
        <div class="card">
            <div class="card card-block">
                <h5 class="card-text">Listado de Peliculas:</h5>
                <div class="panel-body">
                    <table class="table table-hover">
                        <tr>
                            <td><strong>Pelicula</strong></td>
                            <td></td>
                        </tr>

                        @foreach (var pelicula in ViewBag.Peliculas)
                        {
                            <tr>
                                <td>@pelicula.Nombre</td>
                                <td>@Html.ActionLink("Modificar", "EditarPelicula", "Administracion", new { id = @pelicula.IdPelicula }, new { @class = "text-right" })</td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>    
</div>
