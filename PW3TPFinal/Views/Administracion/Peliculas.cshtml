@model IEnumerable<PW3TPFinal.Models.Pelicula>

@{
    ViewBag.Title = "Peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Administracion - Peliculas</h3>
<div class="container">

    <!-- Catalogo de Peliculas -->
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading fondoCabeceraAdmin">
                <h3 class="panel-title text-center letraBlanca">Catalogo de Peliculas</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover text-center">
                    <tr>
                        <td><strong>Pelicula</strong></td>
                        <td><strong>Accion</strong></td>
                    </tr>

                    @foreach (var pelicula in Model)
                    {
                        <tr>
                            <td>@pelicula.Nombre</td>
                            <td>@Html.ActionLink("Modificar", "EditarPelicula", "Administracion", new { id = @pelicula.IdPelicula }, new { @class = "btn btn-warning" })</td>
                        </tr>
                    }

                </table>
                @Html.ActionLink("Agregar nueva pelicula", "NuevaPelicula", "Administracion", new { @class = "btn btn-success btn-block" })
            </div>
        </div>
    </div>
</div>